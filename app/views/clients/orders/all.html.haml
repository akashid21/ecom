- subtotal = 0
%table.table.table-hover.table-striped.table-secondary.table-responsive.table-bordered.text-black.w-100
  %thead.table-dark
    %tr
      %th{style: 'width: 16.5%'}= 'Name'
      %th= 'Description'
      %th= 'price'
      %th= 'Quantity'
      %th= 'Total'
  %tbody
    - @all_orders.each do |order|
      - subtotal += order.quantity.to_i * order.product.price.to_i 
      %tr
        %th= order.product_id
        %td= order.product.name
        %td= order.product.price
        %td= order.quantity
        %td= order.quantity.to_i * order.product.price.to_i
        -# %td= order.button_to 'add', clients_product_orders_path(product), method: :post, class: 'btn btn-success'

%h5 Subtotal
= subtotal